{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["ES6"],
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["jest"],
    "typeRoots": [
      "./node_modules/@types",
      "*/**/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
  }
}
