{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["ES6"],
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["jest"],
    "typeRoots": [
      "./node_modules/@types",
      "*/**/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}