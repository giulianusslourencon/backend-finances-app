{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@tests/*": [
        "__tests__/*"
      ],
      "@presentation/*": [
        "src/adapters/presentation/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@repositories/*": [
        "src/adapters/repositories/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@useCases/*": [
        "src/useCases/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./__tests__/**/*.ts"
  ]
}
