{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@presentation/*": [
        "./src/adapters/presentation/*"
      ],
      "@entities/*": [
        "./src/entities/*"
      ],
      "@repositories/*": [
        "src/external/repositories/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@useCases/*": [
        "./src/useCases/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts"
  ]
}
