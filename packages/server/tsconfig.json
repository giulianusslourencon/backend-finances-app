{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@tests/*": [
        "__tests__/__helpers__/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@errors/*": [
        "src/domain/errors/*"
      ],
      "@entities/*": [
        "src/domain/entities/*"
      ],
      "@useCases/*": [
        "src/useCases/*"
      ],
      "@presentation/*": [
        "src/presentation/*"
      ],
      "@utils/*": [
        "src/solutions/utils/*"
      ],
      "@repositories/*": [
        "src/solutions/repositories/*"
      ],
      "@main/*": [
        "src/main/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./__tests__/**/*.ts"
  ]
}
